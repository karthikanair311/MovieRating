@model Reviewer
@{
    ViewData["Title"] = "Index of Reviewer";
}

<div class="row">
    @if (TempData["validationmessage"] != null)
    {
        string alertType = "alert alert-" + TempData["alertType"];
        <div class="@alertType">
            <strong>Alert!</strong> @TempData["validationmessage"]
        </div>
    }
</div>
<div class="text-center">
    <h2 class="display-4">MOVIES</h2>
</div>
<div class="text-center">
    <div class="p-3 mb-2 bg-dark text-white">Add Reviewers</div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form role="form" asp-action="AddReviewer" method="post">

            <div class="form-group">
                <label for="Name">Reviewer Name</label>
                <input type="text" name="Name" asp-for="Name" class="form-control input-sm" autocomplete="off" data-val="true" data-val-required="The Name field is required." placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Age">Reviewer Age</label>
                <input type="number" name="Age" asp-for="Age" data-val="true" autocomplete="off" data-val-required="The Age field is required." class="form-control input-sm" placeholder="Age">
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
           

            <input type="submit" value="Add Reviewer" class="btn btn-info btn-block">
            <input name="__RequestVerificationToken" type="hidden" value="<removed for brevity>">
        </form>

    </div>

</div>

