@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "newLayout";
}

<div class="text-center">
    
    <div class="p-3 mb-2 bg-dark text-white">Log In</div>
    
    </div>
     
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <div class="container">
                    <form role="form" asp-action="Login" method="post">
                        <div class="form-group">
                            <label for="Name">User Name</label>
                            <input type="text" name="Name" asp-for="Name" autocomplete="off" class="form-control input-sm" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input type="password" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <input type="submit" value="Log In" class="btn btn-info btn-block">
                    </form>
                </div>
            </div>
        </div>
    
