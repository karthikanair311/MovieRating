@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "newLayout";
}

<div class="text-center">
    <h1 class="display-4">MOVIE RATING</h1>
    <div class="p-3 mb-2 bg-dark text-white">Not yet Registered ?</div>
    <div class="text-center">
        <input type="submit" value="Register" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "RegisterUser")'">
    </div>
        <h2 class="text-left">Login</h2>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <div class="container">
                    <form role="form" asp-action="Login" method="post">
                        <div class="form-group">
                            <label for="Name">User Name</label>
                            <input type="text" name="Name" asp-for="Name" autocomplete="off" class="form-control input-sm" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input type="password" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <input type="submit" value="Login" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
